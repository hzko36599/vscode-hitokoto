{
  "name": "hitokoto",
  "displayName": "hitokoto",
  "publisher": "yukisola",
  "description": "一句话，传递更多的感动",
  "icon": "logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "hitokoto",
    "一言"
  ],
  "bugs": {
    "url": "https://github.com/minisola/vscode-hitokoto/issues",
    "email": "blackkid1989@gmail.com"
  },
  "homepage": "https://github.com/minisola/vscode-hitokoto",
  "repository": {
    "type": "git",
    "url": "https://github.com/minisola/vscode-hitokoto"
  },
  "activationEvents": [
    "onCommand:extension.hitokoto",
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.hitokoto",
        "title": "hitokoto"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "hitokoto",
      "properties": {
        "hitokoto.api": {
          "type": "string",
          "default": "https://v1.hitokoto.cn",
          "description": "hitokotoAPI接口地址"
        },
        "hitokoto.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "启动时自动展示"
        },
        "hitokoto.intervalShow": {
          "type": "boolean",
          "default": true,
          "description": "间隔展示"
        },
        "hitokoto.intervalTime": {
          "type": "number",
          "default": 30,
          "description": "间隔展示时间(单位:分钟)"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "eslint": "^5.13.0",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "open": "^6.3.0"
  }
}
